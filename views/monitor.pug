extends layout

block content
  h1= title
  -
    const results = [
      { model: "Monitor 1", screen_size: 24, price: 199.99 },
      { model: "Monitor 2", screen_size: 27, price: 249.99 },
      { model: "Monitor 3", screen_size: 32, price: 299.99 }
    ];
  .container-fluid
  .row
    - for (let i = 0; i < results.length; i++)
      .col-sm-2
        h4= results[i].model
        h3(onclick=`buy(${i})`) BUY
        p Screen Size: #{results[i].screen_size} inches
        p Price: $#{results[i].price}

  script.
      function buy(index) {
        alert("You purchased item " + index);
      }
